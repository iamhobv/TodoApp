@using TodoApp.ViewModels
@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}
<style>
	.darkmode{
		background-color: hsl(237, 14%, 26%)!important;
		
	}
</style>

<div class="row">
	<div class="col-sm-1 col-md-3"></div>
	<div class="col-sm-10 col-md-6 mt-5 me-5">


		<form asp-action="Login" method="post">
			<div asp-validation-summary="All" class="text-danger"></div>
			
			<div>
				<label class="mt-4" asp-for="@Model.Email"></label>
				<input asp-for="@Model.Email" class="taskInput form form-control changable">
				<span class="text-danger mt-1" asp-validation-for="@Model.Email"></span>
			</div>
			
			<div>
				<label class="mt-4" asp-for="@Model.Password"></label>
				<input asp-for="@Model.Password" class="taskInput form form-control changable">
				<span class="text-danger mt-1" asp-validation-for="@Model.Password"></span>
			</div>
			<div class="d-flex gap-1">
				<label class="mt-4" asp-for="@Model.RememberMe"></label>
				<input asp-for="@Model.RememberMe" class="taskInput checkbox mt-4">
				<span class="text-danger mt-1" asp-validation-for="@Model.RememberMe"></span>
			</div>
			
			<div>
				<input type="submit" name="Login" value="Login" class="btn btn-outline-success rounded mt-5" />
			</div>
		</form>
	</div>
</div>


