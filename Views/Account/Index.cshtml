@using TodoApp.ViewModels
@model RegisterViewModel
@{
	ViewData["Title"] = "Register";
}

<div class="row">
	<div class="col-sm-1 col-md-3"></div>
	<div class="col-sm-10 col-md-6 mt-5 me-5">


		<form asp-action="Register" method="post" enctype="multipart/form-data">
			<div asp-validation-summary="All" class="text-danger"></div>
			<div>
				<label class="mt-4"  asp-for="@Model.UserName"></label>
				<input asp-for="@Model.UserName" class="taskInput form form-control"  >
				<span class="text-danger mt-1"  asp-validation-for="@Model.UserName"></span>
			</div>
			<div>
				<label class="mt-4"  asp-for="@Model.Email"></label>
				<input asp-for="@Model.Email" class="taskInput form form-control"  >
				<span class="text-danger mt-1" asp-validation-for="@Model.Email"></span>
			</div>
			<div>
				<label class="mt-4"  asp-for="@Model.PhoneNumber"></label>
				<input asp-for="@Model.PhoneNumber" class="taskInput form form-control"  >
				<span class="text-danger mt-1" asp-validation-for="@Model.PhoneNumber"></span>
			</div>
			<div>
				<label class="mt-4"  asp-for="@Model.Password"></label>
				<input asp-for="@Model.Password" class="taskInput form form-control"  >
				<span class="text-danger mt-1" asp-validation-for="@Model.Password"></span>
			</div>
			<div>
				<label class="mt-4"  asp-for="@Model.ConfirmPassword"></label>
				<input asp-for="@Model.ConfirmPassword" class="taskInput form form-control"  >
				<span class="text-danger mt-1" asp-validation-for="@Model.ConfirmPassword"></span>
			</div>
			<div>
				<label class="mt-4"  asp-for="@Model.ProfilePic"></label>
				<input asp-for="@Model.ProfilePic" class="taskInput form form-control" type="file">
				<span class="text-danger mt-1" asp-validation-for="@Model.ProfilePic"></span>
			</div>
			<div>
				<input type="submit" name="Register" value="Register" class="btn btn-outline-success rounded mt-5"/>
			</div>
		</form>
	</div>
</div>


<partial name="_ValidationScriptsPartial"></partial>