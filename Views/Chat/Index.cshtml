@using TodoApp.ViewModels
@model List<LastMsgViewModel>
@{
    ViewData["Title"] = "Index";
}


<div class="container mt-5">
    @if (@ViewBag.newChat)
    {
         <h2 class="mb-4 text-center">Start New Chat</h2>

    }
    else
    {
         <h2 class="mb-4 text-center">Chats</h2>
    <div class="d-flex justify-content-end"> 
        <a asp-controller="Chat" asp-action="NewChat">  <i class="fa-solid fa-pen-to-square"></i> </a>
       
    </div>
    }
   
    <div class="list-group">
        @foreach (var item in Model)
        {
            <a asp-controller="Chat" asp-action="Chat" asp-route-un="@item.UserName" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center mb-2 rounded">
                <div class="d-flex align-items-center">
                    <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center mr-3 me-3" style="width:60px; height:60px; font-size: 24px;">
                        @if(string.IsNullOrEmpty(item.ProfilePicPath))
                        {

                            @item.UserName.Substring(0, 1).ToUpper()
                        }
                        else
                        {
                            <img src="@item.ProfilePicPath" class="w-100 h-100 rounded-circle" />
                        }
                    </div>
                    <div>
                        <h5 class="mb-1">@item.UserName</h5>
                        <p class="mb-1 text-muted">@item.LastMsg</p>
                    </div>
                </div>
                @* <button class="btn btn-info">Chat</button> *@
            </a>
        }
    </div>
</div>